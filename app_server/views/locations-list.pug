extends layout 

block content  
  .row.banner
    .col-12
      h1= pageHeader.title
      small
        | &nbsp;
        #{pageHeader.strapline}

  each location in locations
    .card
      .card-block
        h4
          a(href="/location")= location.name
          small
            | &nbsp;
            i.fas.fa-star
            i.fas.fa-star
            i.fas.fa-star
            i.far.fa-star
            i.far.fa-star
        span.badge.badge-pill.badge-default.float-right= location.distance
        p.address= location.address
        .facilities
          span.badge.badge-warning= facility
