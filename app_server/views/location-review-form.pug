extends layout

block content
  .row.banner
    .col-12
      h1 Review Starcups
  .row
    .col-12.col-md-8
      form(action="/location", method="post", role="form")
        .form-group.row
          label.col-2.col-form-label(for="name") Name
          .col-10
            input#name.form-control(name="name", type="text", required)
        .form-group.row
          label.col-2.col-form-label(for="rating") Rating
          .col-2
            select#rating.form-control(name="rating", required)
              option(value="5") 5
              option(value="4") 4
              option(value="3") 3
              option(value="2") 2
              option(value="1") 1
        .form-group.row
          label.col-2.col-form-label(for="review") Review
          .col-10
            textarea#review.form-control(name="review", rows="5", required)
        .form-group.row
          .col-12
            button.btn.btn-primary.float-right(type="submit") Add my review
    .col-12.col-md-4
      // Add additional content or sidebar here if needed
